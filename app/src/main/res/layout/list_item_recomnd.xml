<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recomnd_item_card"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:minHeight="50dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/colorSecondaryLight"
    app:cardElevation="10dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/recomnd_img"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:layout_gravity="start"
            tools:src="@tools:sample/avatars"/>
        <TextView
            android:id="@+id/body"
            android:layout_width="0dp"
            android:minWidth="200dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16sp"
            tools:text="Slow cocked chicken"/>
        <ImageView
            android:id="@+id/recomnd_preped_chk"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:background="@null"
            android:tint="@color/colorPrimary"
            android:src="@drawable/outline_check_circle_black_24"
            android:visibility="gone"
            tools:visibility="gone"/>
        <View
            android:id="@+id/recomnd_preped_chk_place_holder"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:visibility="visible"
            tools:visibility="visible"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>