<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    app:contentPaddingRight="30dp"
    app:contentPaddingLeft="30dp"
    app:contentPaddingTop="30dp"
    app:contentPaddingBottom="30dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorSecondaryLight">


    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/feedBAck_prog"
        style="@style/SpinKitView.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:text="@string/feedback_headline"
            tools:text="Tell us what you're thinking. We would love to hear from you, share your thoughts with us and we will reach out to you in less than 2 hours."/>


        <EditText
            android:id="@+id/feedback_editText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:inputType="textMultiLine"
            android:textAlignment="textStart"
            android:gravity="start"
            tools:text="adkjghdasljgalsdjf"
            android:background="@color/colorPrimaryLight"/>

        <Button
            android:id="@+id/send_feedback_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/edit_text_custom"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/send"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>