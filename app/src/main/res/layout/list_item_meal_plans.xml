<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meal_plan_recomnd_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:contentPaddingBottom="2dp"
    app:contentPaddingRight="1dp"
    app:contentPaddingLeft="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/meal_plan_meal_img"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:maxWidth="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="start"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/meal_plan_meal_name"
            android:layout_width="0dp"
            android:minWidth="200dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16sp"
            tools:text="Slow cocked chicken" />

        <ImageView
            android:id="@+id/mealPlans_recomnd_preped_chk"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:background="@null"
            android:tint="@color/colorPrimary"
            android:src="@drawable/outline_check_circle_black_24"
            android:visibility="gone"
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/mealPlans_recomnd_eaten_chk"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:background="@null"
            android:tint="@color/acceptGreen"
            android:src="@drawable/outline_check_circle_black_24"
            android:visibility="gone"
            tools:visibility="visible"/>

        <View
            android:id="@+id/mealPlans_recomnd_preped_chk_place_holder"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:visibility="visible"
            tools:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>