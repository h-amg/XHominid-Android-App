<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    app:contentPaddingRight="15dp"
    app:contentPaddingLeft="15dp"
    app:contentPaddingTop="30dp"
    app:contentPaddingBottom="30dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorSecondaryLight">


    <LinearLayout
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:text="@string/update_weight_goal_title"
            tools:text="Update your weight and goal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/weight"
            tools:text="Weight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/weight_input_update"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:inputType="number"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edit_text_custom" />

            <Spinner
                android:id="@+id/weight_unit_update"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/edit_text_custom">
            </Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/goal"
            tools:text="Goal"/>


        <Spinner
            android:id="@+id/goal_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:textAlignment="center"
            tools:listitem="@layout/spinner_drop_down"
            android:background="@drawable/edit_text_custom"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/activity"
        tools:text="Activity level"/>


        <Spinner
            android:id="@+id/activity_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:textAlignment="center"
            tools:listitem="@layout/spinner_drop_down"
            android:background="@drawable/edit_text_custom"/>

        <Button
            android:id="@+id/send_update_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/user_info_sabe_btn"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/update"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>