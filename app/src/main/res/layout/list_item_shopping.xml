<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recomnd_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:contentPaddingBottom="2dp"
    app:contentPaddingRight="1dp"
    app:contentPaddingLeft="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/quantity_and_measure"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textAlignment="center"
            tools:text="2 Cups" />

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:text="Long placeholder location that should wrap to more than 2 lines of text" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>