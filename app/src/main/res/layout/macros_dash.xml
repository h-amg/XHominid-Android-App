<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/macros_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPaddingTop="5dp"
        app:contentPaddingBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:id="@+id/protein_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <com.vaibhavlakhera.circularprogressview.CircularProgressView
                    android:id="@+id/progView_prot"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:animate="true"
                    app:progressColor="@color/colorPrimaryLight"
                    app:progressInterpolator="@android:anim/accelerate_decelerate_interpolator"
                    app:progressRoundCap="true"
                    app:progressTextColor="@color/colorPrimaryLight"
                    app:progressTextEnabled="true"
                    app:progressTextSize="18dp"
                    app:progressTextType="percent"
                    app:totalWidth="8dp"
                    app:progressWidth="8dp"
                    app:startAngle="270"
                    app:totalValue="100"
                    app:totalColor="@color/colorSecondaryLight"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/prog_cap_prot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="Protein"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPaddingTop="5dp"
        app:contentPaddingBottom="5dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/carbs_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <com.vaibhavlakhera.circularprogressview.CircularProgressView
                    android:id="@+id/progView_carbs"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:animate="true"
                    app:progressColor="@color/colorPrimaryLight"
                    app:progressInterpolator="@android:anim/accelerate_decelerate_interpolator"
                    app:progressRoundCap="true"
                    app:progressTextColor="@color/colorPrimaryLight"
                    app:progressTextEnabled="true"
                    app:progressTextSize="18dp"
                    app:progressTextType="percent"
                    app:totalWidth="8dp"
                    app:progressWidth="8dp"
                    app:startAngle="270"
                    app:totalValue="100"
                    app:totalColor="@color/colorSecondaryLight"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/prog_cap_carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="Carbs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPaddingTop="5dp"
        app:contentPaddingBottom="5dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:id="@+id/fat_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <com.vaibhavlakhera.circularprogressview.CircularProgressView
                    android:id="@+id/progView_fat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:animate="true"
                    app:progressColor="@color/colorPrimaryLight"
                    app:progressInterpolator="@android:anim/accelerate_decelerate_interpolator"
                    app:progressRoundCap="true"
                    app:progressTextColor="@color/colorPrimaryLight"
                    app:progressTextEnabled="true"
                    app:progressTextSize="18dp"
                    app:progressTextType="percent"
                    app:totalWidth="8dp"
                    app:progressWidth="8dp"
                    app:startAngle="270"
                    app:totalValue="100"
                    app:totalColor="@color/colorSecondaryLight"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/prog_cap_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="Fat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

